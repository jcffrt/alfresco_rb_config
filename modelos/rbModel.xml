			<associations>
				<association name="rb:anexoDe">
                    <title>Es Anexo de</title>
                    <source>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </source>
                    <target>
                        <class>rb:oficio</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
					</target>
                </association>
				<!--
				<child-association name="rb:anexosOficio">
                    <title>Anexos Oficio</title>
                    <source>
                        <mandatory>false</mandatory>
