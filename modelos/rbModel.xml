<?xml version="1.0" encoding="UTF-8"?>
<!-- Definition of new Model -->
<model name="rb:rbmodel" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <!-- Optional meta-data about the model -->
    <description>RB Model</description>
    <author>TICs internas</author>
    <version>1.0</version>
    <!-- Imports are required to allow references to definitions in other models-->
    <imports>
        <!-- Import Alfresco Dictionary Definitions -->
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
        <!-- Import Alfresco Content Domain Model Definitions -->
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
    </imports>
    <!-- Introduction of new namespaces defined by this model -->
    <namespaces>
        <namespace uri="http://www.rbsas.co/model/content/1.0" prefix="rb" />
    </namespaces>
	<constraints>
      <constraint name="rb:lista_fases" type="LIST">
         <parameter name="allowedValues">
            <list>
               <value>Borrador contenido</value>
               <value>Borrador legal</value>
               <value>Aprobar</value>
               <value>Firma</value>
			   <value>Radicado-captura</value>
			   <value>Completado</value>
            </list>
         </parameter>
      </constraint>
	</constraints>
    <types>
        <!-- Enterprise-wide generic document type -->
        <type name="rb:doc">
            <title>Documento RB</title>
            <parent>cm:content</parent>
            <associations>
                <association name="rb:documentosRelacionados">
                    <title>Documentos Relacionados</title>
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>cm:content</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
					</target>
                </association>
            </associations>
            <mandatory-aspects>
                <aspect>cm:generalclassifiable</aspect>
            </mandatory-aspects>
        </type>
        <type name="rb:oficio">
            <title>Oficio legal RB</title>
            <parent>rb:doc</parent>
			<properties>
                <property name="rb:tema">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>true</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="rb:destinatario">
                    <type>d:category</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>true</stored>
                        <tokenised>true</tokenised>
                    </index>
					<mandatory enforced='false'>true</mandatory>
                </property>
				<property name="rb:remitente">
                    <type>d:category</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>true</stored>
                        <tokenised>true</tokenised>
                    </index>
					<mandatory enforced='false'>true</mandatory>
                </property>
                <property name="rb:radicado_ext">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>true</stored>
                        <tokenised>true</tokenised>
                    </index>	
                </property>
                <property name="rb:fecha_radicado">
                    <type>d:date</type>
                    <index enabled="false">
                        <atomic>false</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>	
                </property>
				<property name="rb:radicado_int">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>true</stored>
                        <tokenised>true</tokenised>
                    </index>	
                </property>
                <property name="rb:respuesta_req">
                    <type>d:boolean</type>
                    <index enabled="false">
                    </index>	
                </property>
                <property name="rb:fecha_resp">
                    <type>d:date</type>
                    <index enabled="false">
                    </index>	
                </property>
                <property name="rb:area_resp">
                    <type>d:category</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>true</stored>
                        <tokenised>true</tokenised>
                    </index>	
                </property>
				<property name="rb:respondida">
                    <type>d:boolean</type>
                    <index enabled="false">
                    </index>	
                </property>
				<property name="rb:oficioCreado">
                    <type>d:boolean</type>
                    <mandatory>true</mandatory>
                </property>
            </properties>
			<associations>
                <association name="rb:personaResp">
                    <title>Persona Responsable del Oficio</title>
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>cm:person</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
					</target>
                </association>
				<association name="rb:respondeA">
                    <title>Responde a</title>
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>rb:oficio</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
					</target>
                </association>
				<association name="rb:respondidoPor">
                    <title>Es Respondido por</title>
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>rb:oficio</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
					</target>
                </association>
				<child-association name="rb:anexosOficio">
                    <title>Anexos Oficio</title>
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>rb:anexo_oficio</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
					</target>
                </child-association>
            </associations>
            <mandatory-aspects>
                <aspect>rb:relevante</aspect>
				<aspect>rb:revisable</aspect>
            </mandatory-aspects>
        </type>
